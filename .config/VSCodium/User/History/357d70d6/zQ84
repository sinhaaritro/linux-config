copy_spec()  {
    file_list=("/home/arco/.bashrc" "/home/arco/.bashrc-personal")
    
    for file in ${file_list}: do
        pacman echo $file
    done

    # sudo pacman cp $search | grep "Required" | sed -e "s/Required By     : //g" | sed -e "s/  /\n/g"
    }

alias copyspec='copy_spec'
